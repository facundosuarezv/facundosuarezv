#include <stdio.h>
#include <string.h>

struct Alumno {
    char nombre [10];
    int edad;
    char sexo [1];
    int nota;
}

ingresaralumnos (struct Alumno lista[]){
do {
        printf("Ingrese el nombre del alumno (presione Enter para terminar): ");
        scanf("%49s", lista[i].nombre);

        // Si el nombre ingresado está vacío, terminar la entrada de datos
        if (strlen(lista[i].nombre) == 0) {
            break;
        }

        printf("Ingrese la edad del alumno: ");
        scanf("%d", &lista[i].edad);
                
        i++; // Incrementar el contador
    } while (1); // Repetir indefinidamente hasta que el usuario decida terminar
}


int main(){
    struct Alumno listaAlumnos[100];

    ingresaralumnos(listaAlumnos);

}